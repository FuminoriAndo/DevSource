<v:OperationViewBase
    x:Class="CKSI1010.Operation.InputInventoryActual.View.InputInventoryActualInventoryDataView" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnv="clr-namespace:CKSI1010.Converter" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:CKSI1010.Operation.Common.View" 
    xmlns:ctl="clr-namespace:CKSI1010.Controls" 
    xmlns:t="clr-namespace:CKSI1010.Types"
    xmlns:b="clr-namespace:CKSI1010.Common"
    DataContext="{Binding InputInventoryActualInventoryDataViewModel, Source={StaticResource Locator}}"
    d:DesignHeight="600" 
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <v:OperationViewBase.Resources>
        <cnv:MonthToFirstOrSecondConverter x:Key="MonthToFirstOrSecondConverter" />
        <cnv:ShizaiKbnConverter x:Key="ShizaiKbnConverter" />
        <cnv:BooleanToButtonOpacityConverter x:Key="BooleanToButtonOpacityConverter" />
    </v:OperationViewBase.Resources>

    <Grid Margin="8,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- アイコン -->
        <Grid Grid.Row="0" Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <Image
                Width="18" Height="18" HorizontalAlignment="Left"
                Source="/CKSI1010;component/image/hint.png" Margin="-8,0,0,0" />

            </StackPanel>
        </Grid>

        <!-- タイトルメッセージ表示 -->
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" HorizontalAlignment="Left" FontSize="18">
                    <Label.Content>
                        <TextBlock Margin="4,0">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}/{1}(第{2}{3}期)の副資材棚卸の実績値を当月量欄に入力してください。">
                                    <Binding Path="OperationYearMonth.Year" />
                                    <Binding Path="OperationYearMonth.Month" />
                                    <Binding Path="OperationYearMonth.Term" />
                                    <Binding Converter="{StaticResource MonthToFirstOrSecondConverter}" Path="OperationYearMonth.Month" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </Label.Content>
                </Label>
            </Grid>
        </Grid>

        <!-- 一覧表示領域 -->
        <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- tab風ボタン -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="-20,10,0,0">
                <Button FontSize="14" Content="SK"  Command="{Binding FireSelectSK}" Opacity="{Binding ShowSK ,Converter={StaticResource BooleanToButtonOpacityConverter}}"/>
                <Button FontSize="14" Content="EF" Command="{Binding FireSelectEF}" Opacity="{Binding ShowEF ,Converter={StaticResource BooleanToButtonOpacityConverter}}"/>
                <Button FontSize="14" Content="LF" Command="{Binding FireSelectLF}"  Opacity="{Binding ShowLF ,Converter={StaticResource BooleanToButtonOpacityConverter}}"/>
                <Button FontSize="14" Content="築炉" Command="{Binding FireSelectBuilding}" Opacity="{Binding ShowBuilding ,Converter={StaticResource BooleanToButtonOpacityConverter}}"/>
                <Button FontSize="14" Content="LD" Command="{Binding FireSelectLD}" Opacity="{Binding ShowLD ,Converter={StaticResource BooleanToButtonOpacityConverter}}"/>
                <Button FontSize="14" Content="TD" Command="{Binding FireSelectTD}" Opacity="{Binding ShowTD ,Converter={StaticResource BooleanToButtonOpacityConverter}}"/>
                <Button FontSize="14" Content="CC" Command="{Binding FireSelectCC}" Opacity="{Binding ShowCC ,Converter={StaticResource BooleanToButtonOpacityConverter}}"/>
                <Button FontSize="14" Content="他" Command="{Binding FireSelectOthers}" Opacity="{Binding ShowOthers ,Converter={StaticResource BooleanToButtonOpacityConverter}}"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 10, 0 ,0">
                <Button FontSize="14" FontWeight="Bold" Content="保存"  Margin="2,0,0,1" Command="{Binding FireSave}" >
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsFixed}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsFixed}" Value="False">
                                    <Setter Property="IsEnabled" Value="True" />
                                    <Setter Property="Button.Background" Value="{StaticResource BackgroundColor2}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="{StaticResource BackgroundColor2}" BorderThickness="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.RowSpan="2" Margin="-20,0,0,5" >
                <!-- 一覧 -->
                <Grid Margin="0,0,0,8">
                    <!--SK一覧-->
                    <Grid Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid.Style>
                            <Style TargetType="{x:Type Grid}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectShizaiKbn ,Converter={StaticResource ShizaiKbnConverter},
                                    ConverterParameter={x:Static t:ShizaiKbnTypes.SK}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <DataGrid x:Name="skDataGrid" BorderThickness="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" 
                                      ItemsSource="{Binding SkList}" SelectedIndex="{Binding SelectIndex}" SelectedItem="{Binding SelectItem}" 
                                      SelectionMode="Extended"
                                      VirtualizingStackPanel.IsVirtualizing="True"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"  
                                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                      VirtualizingStackPanel.VirtualizationMode="Standard"
                                      AutoGenerateColumns="False" IsReadOnly="True" 
                                      CanUserAddRows="False"
                                      PreviewKeyDown="dataGrid_PreviewKeyDown"
                                      CanUserSortColumns="False"
                                      FontSize="10"
                                      UseLayoutRounding="True">
                            <DataGrid.ItemContainerStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="MinHeight" Value="30"/>
                                </Style>
                            </DataGrid.ItemContainerStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="品目CD" Width="45" FontSize="10" Binding="{Binding HinmokuCd}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="業者CD" Width="45" FontSize="10" Binding="{Binding GyosyaCd}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="品目名" Width="180" FontSize="10" Binding="{Binding HinmokuName}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="業者名" Width="123" FontSize="10" Binding="{Binding GyosyaName}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <ctl:DataGridTemplateColumn Header="当月量" Width="80">
                                    <ctl:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding TogetuValue,StringFormat=#\,0,UpdateSourceTrigger=PropertyChanged}" 
                                                     Name="textboxTogetu" PreviewTextInput="textboxTogetu_PreviewTextInput" 
                                                     FontSize="10"
                                                     PreviewKeyDown="textboxTogetu_PreviewKeyDown" 
                                                     GotFocus="textboxTogetu_GotFocus"
                                                     LostKeyboardFocus="textboxTogetu_LostKeyboardFocus"
                                                     MouseLeftButtonDown="textboxTogetu_MouseLeftButtonDown"
                                                     HorizontalAlignment="Stretch" VerticalAlignment="Center" 
                                                     TextAlignment="Right" 
                                                     MaxLength="12"
                                                     InputMethod.IsInputMethodEnabled="false" 
                                                     InputMethod.PreferredImeState="On" 
                                                     InputMethod.PreferredImeConversionMode="Alphanumeric"
                                                     b:TogetuAmountBehaviors.IsNumericAppend="True">
                                                <TextBox.Style>
                                                    <Style TargetType="{x:Type TextBox}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsNoProblemData}" Value="True">
                                                                <Setter Property="Background" Value="White"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsWarning}" Value="True">
                                                                <Setter Property="Background" Value="Yellow"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsError}" Value="True">
                                                                <Setter Property="Background" Value="Red"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding DataContext.IsFixed,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type UserControl}}}" Value="True">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding DataContext.IsFixed,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type UserControl}}}" Value="False">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </DataTemplate>
                                    </ctl:DataGridTemplateColumn.CellTemplate>
                                </ctl:DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="当月量（予想）" Width="80">
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsTogetuYosouError}" Value="True">
                                                    <Setter Property="Background" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding TogetuYosouValue,StringFormat=#\,0}" 
                                                       FontSize="10" VerticalAlignment="Center" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="入庫量" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding NyukoValue,StringFormat=#\,0}" 
                                                       FontSize="10" VerticalAlignment="Center" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="出庫量" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding HaraiValue,StringFormat=#\,0}" 
                                                       FontSize="10" VerticalAlignment="Center" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="返品" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding HenpinValue,StringFormat=#\,0}" 
                                                       FontSize="10" VerticalAlignment="Center" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="前月在庫" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ZengetuValue,StringFormat=#\,0}" 
                                                       FontSize="10" VerticalAlignment="Center" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="倉庫在庫" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding SoukoValue,StringFormat=#\,0}" 
                                                       FontSize="10" VerticalAlignment="Center" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="EF在庫" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding EfValue,StringFormat=#\,0}" 
                                                       FontSize="10" VerticalAlignment="Center" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="LF在庫" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LfValue,StringFormat=#\,0}" 
                                                       FontSize="10" VerticalAlignment="Center" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="CC在庫" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding CcValue,StringFormat=#\,0}" 
                                                       FontSize="10" VerticalAlignment="Center" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>

                    <!--EF一覧-->
                    <Grid Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Grid.Style>
                            <Style TargetType="{x:Type Grid}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectShizaiKbn ,Converter={StaticResource ShizaiKbnConverter},
                                    ConverterParameter={x:Static t:ShizaiKbnTypes.EF}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <DataGrid x:Name="efDataGrid" BorderThickness="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" 
                                      ItemsSource="{Binding EfList}" SelectedIndex="{Binding SelectIndex}" SelectedItem="{Binding SelectItem}" 
                                      SelectionMode="Extended"
                                      VirtualizingStackPanel.IsVirtualizing="True"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto"  
                                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                      VirtualizingStackPanel.VirtualizationMode="Standard"
                                      AutoGenerateColumns="False" IsReadOnly="True" 
                                      CanUserAddRows="False" 
                                      PreviewKeyDown="dataGrid_PreviewKeyDown"
                                      CanUserSortColumns="False"
                                      FontSize="10"
                                      UseLayoutRounding="True">
                            <DataGrid.ItemContainerStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="MinHeight" Value="30"/>
                                </Style>
                            </DataGrid.ItemContainerStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="品目CD" Width="45" FontSize="10" Binding="{Binding HinmokuCd}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="業者CD" Width="45" FontSize="10" Binding="{Binding GyosyaCd}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="品目名" Width="180" Binding="{Binding HinmokuName}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="業者名" Width="123" Binding="{Binding GyosyaName}">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="当月量" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding TogetuValue,StringFormat=#\,0,UpdateSourceTrigger=PropertyChanged}" 
                                                     x:Name="textboxTogetu" PreviewTextInput="textboxTogetu_PreviewTextInput" 
                                                     FontSize="10"
                                                     PreviewKeyDown="textboxTogetu_PreviewKeyDown" 
                                                     GotFocus="textboxTogetu_GotFocus" 
                                                     LostKeyboardFocus="textboxTogetu_LostKeyboardFocus"
                                                     MouseLeftButtonDown="textboxTogetu_MouseLeftButtonDown"
                                                     HorizontalAlignment="Stretch" 
                                                     VerticalAlignment="Center" 
                                                     TextAlignment="Right" MaxLength="12"
                                                     InputMethod.IsInputMethodEnabled="false" 
                                                     InputMethod.PreferredImeState="On" 
                                                     InputMethod.PreferredImeConversionMode="Alphanumeric"
                                                     b:TogetuAmountBehaviors.IsNumericAppend="True">
                                                <TextBox.Style>
                                                    <Style TargetType="{x:Type TextBox}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsNoProblemData}" Value="True">
                                                                <Setter Property="Background" Value="White"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsWarning}" Value="True">
                                                                <Setter Property="Background" Value="Yellow"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsError}" Value="True">
                                                                <Setter Property="Background" Value="Red"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding DataContext.IsFixed,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type UserControl}}}" Value="True">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding DataContext.IsFixed,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type UserControl}}}" Value="False">
                                                                <Setter Property="IsEnabled" Value="True"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="最大当月量" Width="80">
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell }">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsTogetuYosouError}" Value="True">
                                                    <Setter Property="Background" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding TogetuYosouValue,StringFormat=#\,0}" VerticalAlignment="Center" FontSize="10" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="入庫量" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding NyukoValue,StringFormat=#\,0}" VerticalAlignment="Center" FontSize="10" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="出庫量" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding HaraiValue,StringFormat=#\,0}" VerticalAlignment="Center" FontSize="10" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="返品" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding HenpinValue,StringFormat=#\,0}" VerticalAlignment="Center" FontSize="10" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="前月在庫" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ZengetuValue,StringFormat=#\,0}" 
                                                       FontSize="10" VerticalAlignment="Center" TextAlignment="Right" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="倉庫在庫" Width="80">
